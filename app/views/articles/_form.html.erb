<% if @article.errors.any? %>
<h2>The following errors prevented the article to be created</h2>
<ul>
	<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<div class='row'>
	<div class='col-xs-12'>

		<%= form_for(@article, :html => {class: "form", role: "form"})  do |f| %>
			
			<div class="form-group col-xs-12">
				<div class="control-label col-xs-3">
					<%= f.label :title %>
				</div>
				<div class="col-xs-7">
					<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
				</div>
			</div>

			<div class="form-group col-xs-12">
				<div class="control-label col-xs-3">
					<%= f.label :description %>
				</div>
				<div class="col-xs-7">
					<%= f.text_area :description, rows: 10, class: "form-control", placeholder:"Body of article" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-6 col-sm-10">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
				</div>
			</div>

			<div class="col-xs-8 col-xs-offset-4">
				[ <%= link_to "Cancel request and return to Articles Listing", articles_path %> ]
			</div>

		<% end %>

	</div>

</div>



